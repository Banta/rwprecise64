{
  "name": "postgresql",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "postgresql": {
      "version": "9.3",
      "password": {
        "postgres": "vagrant"
      },
      "enable_pgdg_apt": true,
      "pgdg": {
        "release_apt_codename": "precise"
      },
      "client": {
        "packages": ["postgresql-client-9.3", "libpq-dev"]
      },
      "server": {
        "packages": ["postgresql-9.3", "postgresql-contrib-9.3", "postgresql-server-dev-9.3"]
      },
      "config": {
        "listen_addresses": "*"
      },
      "pg_hba": [
        { "type": "local", "db": "all", "user": "postgres", "addr": null, "method": "ident" },
        { "type": "local", "db": "all", "user": "all", "addr": null, "method": "ident" },
        { "type": "host", "db": "all", "user": "all", "addr": null, "method": "md5" }
      ]
    }
  },
  "description": "The base role for systems that postgresql",
  "run_list": [
    "recipe[postgresql]",
    "recipe[postgresql::server]"
  ]
}